<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.blueshift"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="21"/>

    <!--Notification-->
    <permission android:name="com.blueshift.permission.C2D_MESSAGE" android:protectionLevel="signature"/>
    <uses-permission android:name="com.blueshift.permission.C2D_MESSAGE"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- End : Notification-->

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
            android:name=".BFApplication"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher">

        <activity android:name=".LandingActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ProductPage"/>

        <!-- Notification -->
        <receiver android:name="com.blueshift.gcm.GCMBroadcastReceiver"
                  android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.blueshift" />
            </intent-filter>
        </receiver>
        <service android:name="com.blueshift.gcm.GCMIntentService" />

        <receiver android:name=".rich_push.RichPushBroadcastReceiver">
            <intent-filter>
                <action android:name="com.blueshift.RICH_PUSH_RECEIVED"/>
            </intent-filter>
        </receiver>

        <meta-data android:name="com.blueshift.gcm_sender_id"
                   android:value="id:797760330995" />
        <!-- End : Notification -->

        <receiver android:exported="true" android:name=".receiver.AppInstallReceiver">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER"/>

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!--Deep-linking-->
        <receiver android:name=".rich_push.RichPushActionReceiver">
            <intent-filter>
                <action android:name="com.blueshift.ACTION_VIEW"/>
                <action android:name="com.blueshift.ACTION_BUY"/>
                <action android:name="com.blueshift.ACTION_OPEN_CART"/>
                <action android:name="com.blueshift.ACTION_OPEN_OFFER_PAGE"/>
                <category android:name="com.blueshift"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".SamplePushReceiver">
            <intent-filter>
                <action android:name="com.blueshift.ACTION_PUSH_RECEIVED"/>
            </intent-filter>
        </receiver>
        <!--End: Deep-linking-->

    </application>
</manifest>
