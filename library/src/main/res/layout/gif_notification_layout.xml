<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/notification_basic_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bs_notification_min_height" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bs_notification_big_pic_height"
        android:layout_marginTop="@dimen/bs_notification_min_height">

        <ImageView
            android:id="@+id/gif_big_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/gif_notification_image" />

        <ImageButton
            android:id="@+id/gif_play_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bs_translucent_circle"
            android:contentDescription="@string/gif_notification_play_button"
            android:src="@drawable/bs_circled_play"
            android:visibility="visible" />

    </RelativeLayout>

</FrameLayout>